Bootstrap: docker

From: mambaorg/micromamba

%files    
    environment.yml /environment.yml
    .mambarc /root/.mambarc

%post
    apt-get --allow-releaseinfo-change update && apt-get install -y \
        procps \
        curl \
        unzip \
        libgomp1 \
        openjdk-17-jdk
    micromamba install --yes --name base --file environment.yml
