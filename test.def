Bootstrap: docker

From: mambaorg/micromamba:jammy

%files    
    environment.yml
    .mambarc

%post
    micromamba install --yes --name base --file environment.yml
    echo "echo $PATH=/opt/conda/bin:%PATH" | tee -a $SINGULARITY_ENVIRONMENT

%test
    micromamba list --name base
    /opt/conda/bin/python --version
    ls /opt/conda/share/igblast
    which igblastn