Bootstrap: docker

From: mambaorg/micromamba:jammy

%files    
    environment.yml
    .mambarc

%post
    micromamba env create --name sc-dandelion-container --file environment.yml
    /bin/micromamba shell hook -s bash
    # Initialize the shell
    eval "$(/bin/micromamba shell hook -s bash)"
    echo "micromamba activate sc-dandelion-container" | tee -a $SINGULARITY_ENVIRONMENT

%test
    micromamba list
    micromamba activate sc-dandelion-container